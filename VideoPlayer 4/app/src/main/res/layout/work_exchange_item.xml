<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="275dp"
        android:layout_height="200dp"
        android:background="@drawable/big_pic_frame"/>

    <TextView
        android:id="@+id/work_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/work_name"
        android:layout_alignTop="@id/work_name"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/update_time"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/view_all"
        android:layout_marginRight="10dp"
        android:text="添加评论"/>
    
    <LinearLayout
        android:id="@+id/exchange_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/work_name"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">

    </LinearLayout>
    
</RelativeLayout>
