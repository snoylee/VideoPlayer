<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vcooline.li.videoplayer" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".EntryActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.VideoActivity"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:name=".view.PdfActivity"
            android:label="@string/title_activity_pdf" >
        </activity>
        <activity
            android:name=".view.VideoViewPlayingActivity"
            android:label="@string/title_activity_pdf" >
        </activity>
        <activity
            android:name=".category.SketchActivity"
            android:label="@string/title_activity_sketch"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.InformationActivity"
            android:label="艺考咨询"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.ColorActivity"
            android:label="@string/title_activity_information"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.QuickActivity"
            android:label="速写"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.DesignActivity"
            android:label="速写"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.CulturalActivity"
            android:label="速写"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.PicActivity"
            android:label="速写"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.SettingsActivity"
            android:label="设置"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".view.profile.ChooseAvatarActivity"
            android:label="@string/title_activity_choose_avatar"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".category.GalleryActivity"
            android:label="@string/title_activity_gallery" >
        </activity>
        <activity
            android:name=".category.InformationDetailActivity"
            android:label="@string/title_activity_information_detail" >
        </activity>
    </application>

</manifest>
