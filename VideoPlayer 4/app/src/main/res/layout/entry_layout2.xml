<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_black">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/entry_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
       >
        <RelativeLayout
            android:id="@+id/t1"
            android:layout_width="239dp"
            android:layout_height="120dp"
            android:layout_marginTop="70dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/entry_t1"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/t2"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_1"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/t1"/>
        <ImageView
            android:id="@+id/t3"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_2"
            android:layout_alignTop="@id/t2"
            android:layout_toRightOf="@id/t2"
            android:layout_marginLeft="3dp"/>
        <!-- settings -->
        <ImageView
            android:id="@+id/t4"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_3"
            android:layout_alignTop="@id/t2"
            android:layout_toRightOf="@id/t3"
            android:layout_marginLeft="3dp"/>
        <ImageView
            android:id="@+id/t14"
            android:layout_width="150dp"
            android:layout_height="114dp"
            android:background="@drawable/weather_back"
            android:layout_alignBottom="@+id/t1"
            android:layout_alignLeft="@+id/t8" />
        <!-- 素描 -->
        <ImageView
            android:id="@+id/t5"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_4"
            android:layout_above="@+id/t11"
            android:layout_toLeftOf="@+id/t2" />

        <ImageView
            android:id="@+id/t6"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_6"
            android:layout_toRightOf="@id/t5"
            android:layout_alignTop="@id/t5"
            android:layout_marginLeft="3dp"/>

        <!-- 艺术图库-->
        <ImageView
            android:id="@+id/t7"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_7"
            android:layout_toRightOf="@id/t4"
            android:layout_below="@id/t4"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"/>

        <ImageView
            android:id="@+id/t8"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_8"
            android:layout_toRightOf="@id/t7"
            android:layout_alignTop="@id/t7"
            android:layout_marginLeft="3dp"/>

        <!-- 速写 -->
        <ImageView
            android:id="@+id/t9"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_9"
            android:layout_marginLeft="121dp"
            android:layout_below="@id/t5"
            android:layout_marginTop="3dp"/>

        <!-- 设计 -->
        <ImageView
            android:id="@+id/t10"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_10"
            android:layout_toRightOf="@id/t9"
            android:layout_alignTop="@id/t9"
            android:layout_marginLeft="3dp"/>

        <!-- 设计 -->
        <ImageView
            android:id="@+id/t11"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_11"
            android:layout_below="@+id/t7"
            android:layout_alignLeft="@+id/t4" />
        <!-- 艺考咨询 -->
        <ImageView
            android:id="@+id/t12"
            android:layout_width="150dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_icon_12"
            android:layout_below="@+id/t10"
            android:layout_toLeftOf="@+id/t7" />
        <ImageView
            android:id="@+id/t13"
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:src="@drawable/entry_t3"
            android:scaleType="center"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/t8" />
    </RelativeLayout>
</RelativeLayout>
